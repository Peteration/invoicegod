{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/nextjs"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/invoices/([^/]+)\\.pdf",
      "dest": "/api/invoices/[id]/receipt?id=$1",
      "headers": {
        "Content-Type": "application/pdf",
        "Cache-Control": "public, max-age=604800"
      }
    },
    {
      "src": "/invoices/([^/]+)",
      "dest": "/api/invoices/[id]/receipt?id=$1"
    },
    {
      "src": "/crypto-payment/(.*)",
      "dest": "/components/Invoice/PaymentQR?invoiceId=$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'"
        }
      ]
    }
  ],
  "functions": {
    "api/auth/web3-login.ts": {
      "memory": 3008,
      "maxDuration": 15
    },
    "api/webhooks/*.ts": {
      "memory": 2048,
      "maxDuration": 10
    }
  },
  "regions": ["iad1"]
}
