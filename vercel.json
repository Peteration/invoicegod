{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/nextjs",
      "config": {
        "functions": {
          "api/auth/web3-login.ts": {
            "memory": 3008,
            "maxDuration": 15
          }
        }
      }
    }
  ],
  "redirects": [
    {
      "source": "/old-invoice",
      "destination": "/new-invoice",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "regions": ["iad1"]
}
